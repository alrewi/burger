<div class="container">
    <div class="row">
        <img src="assets/img/burger.png" width="300px" class="burger-pic">
        <h1 class="title">EAT A BURGER, ALREADY</h1>
    </div>
    <div class="row clearfix">
        <div class="col-sm-6 col-left">
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-sm-6 col-right">
            {{#each burgers}}
                {{#if devoured}}
                    <div>{{this.id}}. {{this.burger_name}}</div>
                {{/if}}
            {{/each}}
        </div>
    </div>
    <form class="create-form bottom-div">
        <div class="form-group burger-form">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What kind of burger do you want?"></textarea>
        </div>
        <button id="burger-button" type="submit">Add Burger</button>
    </form>
</div>
