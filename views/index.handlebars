<div class="container">
    <div class="row">
        <div class="burger-pic"></div>
        <h1>EAT A BURGER</h1>
    </div>
    <div class="row">
        <div class="col-sm-6 col-left">
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        <tr class="table-row">
                            <td class="table-first-col">{{id}}. {{burger_name}}</td>
                            <td><button class="change-devour" data-id="{{id}}">Devour it!</button></td> 
                        </tr>
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-sm-6 col-right">
            {{#each burgers}}
                {{#if devoured}}
                    <div>{{this.id}}. {{this.burger_name}}</div>
                {{/if}}
            {{/each}}
        </div>
    </div>
    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What kind of burger do you want?"></textarea>
        </div>
        <button type="submit">Add Burger</button>
    </form>
</div>
